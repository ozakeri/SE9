<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_background_copy">


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="75dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/govah" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_title"
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/splash_title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_below="@+id/img_title"
            android:layout_centerInParent="true"
            android:background="@drawable/splash_sino" />


        <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:id="@+id/waitProgress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cpv_animAutostart="true"
            app:cpv_color="@color/white"
            app:cpv_indeterminate="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/blue"
            android:layout_marginBottom="15dp"
            android:text="gapcom.ir" />

    </RelativeLayout>
</layout>