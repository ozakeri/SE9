                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="اتوبوس"
                                        android:textSize="18sp"
                                        android:theme="@style/MyRadioButtonReport"
                                        android:layout_margin="10dp"/>

                                </LinearLayout>


                                <LinearLayout
